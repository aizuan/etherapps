<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#0e171f">

    <ImageButton
        android:id="@+id/iv_1"
        android:layout_width="399dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pic3"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:hint="Email"
        android:textColorHint="#ffffff"
        android:inputType="textEmailAddress"
        android:background="@drawable/btn_5"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/user"
        android:layout_below="@id/iv_1"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"
        android:layout_below="@id/email"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_5"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/pass"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/btn_4"
            android:onClick="signup"
            android:text="sign up"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/email_sign_in_button"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/btn_4"
            android:text="login"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/email_sign_out_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:text="Sign out"
            android:textStyle="bold" />

        <Button
            android:id="@+id/view_items_screen"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:text="View Database Contents"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>